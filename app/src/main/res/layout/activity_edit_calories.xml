<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnew"
    tools:context=".EditCalories">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="410dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/test2" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-12dp"
        android:text="UPDATE CALORIE INTAKE"
        android:textColor="#fff"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.109" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="329dp"
        android:layout_height="51dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-10dp"
        android:text="Set you calorie goal today !!"
        android:textColor="#000"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0dp"
        android:text="This is just a rough estimate, always consult your doctor before starting any diet"
        android:textColor="#000000"
        android:textSize="9dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="129dp"
        android:layout_height="31dp"
        android:background="@drawable/button_curve"
        android:text="Update details"
        android:textColor="#000000"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calEdit"
        app:layout_constraintVertical_bias="0.76" />

    <EditText
        android:id="@+id/calEdit"
        android:layout_width="239dp"
        android:layout_height="36dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint=" Calorie Intake"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#979797"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/dateEdit"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="#979797"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calEdit"
        app:layout_constraintVertical_bias="0.151" />

    <EditText
        android:id="@+id/feelingsEdit"
        android:layout_width="244dp"
        android:layout_height="38dp"
        android:background="@drawable/edit_text_border"
        android:hint="How are you feeling today.. "
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#979797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateEdit"
        app:layout_constraintVertical_bias="0.122" />

    <EditText
        android:id="@+id/notesEdit"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:autofillHints=""
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Keep track on your day"
        android:textAlignment="center"
        android:textColor="#979797"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feelingsEdit"
        app:layout_constraintVertical_bias="0.313" />

</androidx.constraintlayout.widget.ConstraintLayout>