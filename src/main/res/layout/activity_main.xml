<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/im3">


    <Button
        android:id="@+id/button_w1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buutton"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <Button
        android:id="@+id/button_w2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buutton"
        android:text="View"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="484dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/header" />

    <EditText
        android:id="@+id/water"
        android:layout_width="305dp"
        android:layout_height="54dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:gravity="center"
        android:hint="Your daily water consumption(ml)"
        android:inputType="number"
        android:maxLength="4"
        android:padding="12dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="299dp"
        android:layout_height="86dp"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif-black"
        android:lineSpacingExtra="-5dp"
        android:text="WATER CONSUMPTION"

        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textColorHighlight="#932A2A"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="344dp"
        android:layout_height="34dp"

        android:fontFamily="sans-serif-thin"
        android:lineSpacingExtra="-3sp"
        android:text="Approximatly One Cup = 150ml "
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHighlight="#932A2A"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />

    <EditText
        android:id="@+id/wakeup"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:gravity="center"
        android:hint="I wake up at"

        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <EditText
        android:id="@+id/gotobed"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:background="@drawable/border_radius"
        android:ems="10"
        android:gravity="center"
        android:hint="I go to bed at"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731" />

</androidx.constraintlayout.widget.ConstraintLayout>